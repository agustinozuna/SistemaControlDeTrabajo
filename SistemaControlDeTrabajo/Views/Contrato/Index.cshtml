@model IEnumerable<SistemaControlDeTrabajo.Models.Contrato>

@{
    ViewBag.Title = "Index";
}  

<div class="container body-content" style="margin-top: 150">
    <h2 style="text-align:center">Contratos</h2>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NroContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFirma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NroSerieEquipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFinContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaUltimoMatenimiento)
            </th>
            <th>
               <!--@Html.DisplayNameFor(model => model.Ciudad.Nombre)--> Ciudad
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Cliente.NroDocumento)--> Cliente 
            </th>
            <th>
               <!--@Html.DisplayNameFor(model => model.TipoGenerador.Descripcion)--> Tipo Generador
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NroContrato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaFirma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NroSerieEquipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaFinContrato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaUltimoMatenimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ciudad.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.NombreRazonSocial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoGenerador.Descripcion)
                </td>
            </tr>
        }

    </table>
</div>